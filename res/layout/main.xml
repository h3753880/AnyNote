<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/widget35"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:theme="@android:style/Theme.Black.NoTitleBar"
	xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:id="@+id/appTitle"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ffccccff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="207dp"
            android:layout_height="70dp"
            android:background="#ff6666ff"
            android:text="AnyNote"
            android:textSize="35dp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/Login"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:background="#ff6666ff"
            android:text="Login"
            android:textSize="20dp"
            android:typeface="monospace" />
    </TableRow>

<TableRow
	android:id="@+id/content"
	android:layout_width="320dp"
	android:layout_height="140dp"
	android:background="#ffccccff"
	android:orientation="horizontal">

<TextView
    android:id="@+id/newTime"
    android:layout_width="160dp"
    android:layout_height="140dp"
    android:background="#ff9933ff"
    android:text="新增時間提醒"
    android:textSize="20dp" />

<TextView
    android:id="@+id/newGeo"
    android:layout_width="160dp"
    android:layout_height="140dp"
    android:background="#ff0000ff"
    android:text="新增地理提醒"
    android:textSize="20dp" />

</TableRow>
<TableRow
	android:id="@+id/content2"
	android:layout_width="fill_parent"
	android:layout_height="155dp"
	android:background="#ffccccff"
	android:orientation="horizontal">

<TextView
    android:id="@+id/set"
    android:layout_width="160dp"
    android:layout_height="155dp"
    android:background="#ffcc99ff"
    android:text="設定"
    android:textSize="20dp" />

<TextView
    android:id="@+id/search"
    android:layout_width="160dp"
    android:layout_height="155dp"
    android:background="#ff9999ff"
    android:text="瀏覽"
    android:textSize="20dp" />

</TableRow>
<TableRow
	android:id="@+id/bottom"
	android:layout_width="fill_parent"
	android:layout_height="86dp"
	android:background="#ff006699"
	android:orientation="horizontal"
	android:layout_gravity="center_vertical">

<TextView
    android:id="@+id/memory"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:text="回憶模式"  
    android:textSize="30dp" />

</TableRow>
</LinearLayout>
