<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bback01"
    android:orientation="vertical" >



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_weight="1"
        android:src="@drawable/ntitle" />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_weight="0.2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/newtime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|right"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:scaleType="fitStart"
            android:src="@drawable/nnewtime" />

        <ImageView
            android:id="@+id/newgeo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/nnewgeo" />

        <ImageView
            android:id="@+id/broswer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/nbrowser" />

        <ImageView
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/nset" />

        <ImageView
            android:id="@+id/memory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/nmemory" />
                
    </LinearLayout>



</LinearLayout>
